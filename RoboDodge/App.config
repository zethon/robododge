<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <appender name="TextLog" type="log4net.Appender.RollingFileAppender">
      <file value="roboball.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Once"/>
      <maxSizeRollBackups value="4"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%9timestamp %date{yyyy/MM/dd HH:mm:ss.fff} [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>

    <appender name="Console" type="log4net.Appender.ColoredConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{HH:mm:ss} %-5level %message%newline"/>
      </layout>

      <mapping>
        <level value="FATAL"/>
        <foreColor value="White"/>
        <backColor value="Red, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="ERROR"/>
        <foreColor value="Red, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="WARN"/>
        <foreColor value="Yellow, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="INFO"/>
        <foreColor value="White"/>
      </mapping>
      <mapping>
        <level value="DEBUG"/>
        <foreColor value="Cyan, HighIntensity"/>
      </mapping>
    </appender>

    <root>
      <level value="ALL"/>
      <appender-ref ref="TextLog"/>
      <appender-ref ref="Console"/>
    </root>
  </log4net>
</configuration>